<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

        <record model="ir.ui.view" id="view_partner_form">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
				<xpath expr="//group/field[@name='customer']" position="before">
					<field name="prospect"/>
				</xpath>
			</field>
		</record>
        <record model="ir.ui.view" id="view_partner_search">
            <field name="name">res.partner.search</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="priority" eval="30"/>
            <field name="arch" type="xml">
                <filter name="customer" position="before">
                    <filter string="Prospect" name="prospect" domain="[('prospect', '=', 1)]" help="Prospect Partners"/>
                </filter>
            </field>
        </record>
