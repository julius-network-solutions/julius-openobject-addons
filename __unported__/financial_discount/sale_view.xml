<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<!-- Sale View -->
        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="priority">25</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='sale_total']" position="after">
                    <group class="oe_subtotal_footer oe_right" colspan="2"
                        name="sale_total_financial_discount"
                        attrs="{'invisible':[('financial_discount_is_present', '=', False)]}">
                        <field name="amount_untaxed_financial_discounted" widget="monetary"
                            options="{'currency_field': 'currency_id'}"/>
                        <field name="amount_tax_financial_discounted" widget="monetary"
                            options="{'currency_field': 'currency_id'}"/>
                        <div class="oe_subtotal_footer_separator oe_inline">
                            <label for="amount_total_financial_discounted"/>
                            <button name="button_dummy" states="draft,sent"
                                string="(update)" type="object" class="oe_edit_only oe_link"/>
                        </div>
                        <field name="amount_total_financial_discounted" nolabel="1"
                            class="oe_subtotal_footer_separator" widget="monetary"
                            options="{'currency_field': 'currency_id'}"/>
                    </group>
                    <group style="width: 65%%">
                        <label for="financial_discount_percentage"/>
                        <div>
	                        <field name="financial_discount_percentage" class="oe_inline"/>
							<button name="generate_financial_discount" string="Generate Financial Discount"  
								attrs="{'invisible':[('financial_discount_percentage','=','0')]}" class="oe_edit_only" type="object"/>
                            <field name="financial_discount_is_present" invisible="1"/>
                            <label string="If you don't 'Generate Financial Discount', the exact discount will be computed when invoicing based on delivery order(s)."
                                class="oe_edit_only"
                                attrs="{'invisible':['|', ('financial_discount_percentage', '=', 0), ('state','not in',('draft','sent'))]}"/>
                        </div>
                    </group>
            	</xpath>
                <xpath expr="//group[@name='sale_total']" position="attributes">
                    <attribute name="attrs">{'invisible':[('financial_discount_is_present', '=', True)]}</attribute>
                </xpath>
			</field>
        </record>
	</data>
</openerp>

        
                            