<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mail_message_action_form" model="ir.ui.view">
            <field name="name">mail.message.action.form</field>
            <field name="model">mail.message.action</field>
            <field name="arch" type="xml">
                <form string="Mail Message Action">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Action name"/>
                            </h1>
                        </div>
                        <group>
                            <group colspan="4">
                                <field name="value"/>
                            </group>
                            <group>
                                <field name="action"/>
                                <field name="location_id"/>
                                <field name="origin"/>
                                <field name="keep_in_package"/>
                            </group>
                            <group>
                                <field name="model_id"/>
                                <field name="model_name"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="mail_message_action_tree" model="ir.ui.view">
            <field name="name">mail.message.action.tree</field>
            <field name="model">mail.message.action</field>
            <field name="arch" type="xml">
                <tree string="Mail Message Action">
                    <field name="name"/>
                    <field name="value"/>
                    <field name="model_id"/>
                    <field name="action"/>
                    <field name="location_id"/>
                </tree>
            </field>
        </record>

        <record id="mail_message_action_search" model="ir.ui.view">
            <field name="name">mail.message.action.search</field>
            <field name="model">mail.message.action</field>
            <field name="arch" type="xml">
                <search string="Mail Message Action">
                    <field name="name"/>
                    <field name="value"/>
                    <field name="model_id"/>
                    <field name="action"/>
                    <field name="location_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Model" name="group_by_model_name" domain="[]" context="{'group_by': 'model_id'}"/>
                        <filter string="Action" name="group_by_action" domain="[]" context="{'group_by': 'action'}"/>
                    </group>
                </search>
            </field>
        </record>

        <act_window
            id="mail_message_action_action"
            name="Mail Message Actions"
            res_model="mail.message.action"/>

        <menuitem
            id="mail_message_action_menu"
            name="Mail Message Actions"
            parent="base.menu_automation"
            action="mail_message_action_action"/>

    </data>
</odoo>
