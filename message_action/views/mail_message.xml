<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mail_message_form" model="ir.ui.view">
            <field name="name">mail.message.form</field>
            <field name="model">mail.message</field>
            <field name="inherit_id" ref="mail.view_message_form"/>
            <field name="arch" type="xml">
                <sheet position="before">
                    <header>
                        <button name="treat_message" type="object"
                                string="Treat Message"
                                attrs="{'invisible': [('to_be_treated', '=', False)]}"/>
                    </header>
                </sheet>
                <field name="moderator_id" position="after">
                    <field name="to_be_treated"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
