<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_employee_form_address" model="ir.ui.view">
            <field name="name">hr.employee.form.address</field>
            <field name="model">hr.employee</field>
			<field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
				<field name="address_home_id" position="replace">
					<group colspan="2" col="4">
						<field name="street"/>
	        			<field name="street2"/>
	        			<field name="zip"/>
	        			<field name="city"/>
	        			<field name="email"/>
	        			<field name="phone"/>
	        			<field name="fax"/>
	        			<field name="mobile"/>
					</group>
				</field>
            </field>
        </record>

	</data>
</openerp>
